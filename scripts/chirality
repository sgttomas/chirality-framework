#!/usr/bin/env python3
"""
Entry point script for Chirality Framework CLI.

This allows running 'chirality' directly from command line
after installing the package or adding to PATH.
"""

import sys
from pathlib import Path

# Add parent directory to path
sys.path.insert(0, str(Path(__file__).parent.parent))

from chirality.cli import cli

if __name__ == '__main__':
    cli()